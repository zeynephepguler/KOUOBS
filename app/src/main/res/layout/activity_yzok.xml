<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C78A"
    tools:context=".yzok">

    <TextView
        android:id="@+id/yaz"
        android:layout_width="288dp"
        android:layout_height="97dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/textarka"
        android:text="Kocaeli Üniversitesi Yaz Okulu Başvuru Sayfası"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/isim"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/textarka"
        android:gravity="right"
        android:paddingRight="8dp"
        android:text="Ad:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/veri_isim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yaz" />

    <TextView
        android:id="@+id/sisim"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/textarka"
        android:gravity="right"
        android:paddingRight="8dp"
        android:text="Soyad:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/veri_sisim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isim" />

    <TextView
        android:id="@+id/num"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/textarka"
        android:gravity="right"
        android:paddingRight="8dp"
        android:text="Numara:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/veri_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sisim" />

    <TextView
        android:id="@+id/sin"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/textarka"
        android:gravity="right"
        android:paddingRight="8dp"
        android:text="Sınıf:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/veri_sin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num" />

    <EditText
        android:id="@+id/veri_isim"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/textarka"
        android:text=" "
        android:inputType="text"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yaz" />

    <EditText
        android:id="@+id/veri_sisim"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/textarka"
        android:text=" "
        android:inputType="text"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veri_isim" />

    <EditText
        android:id="@+id/veri_num"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/textarka"
        android:text=" "
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veri_sisim" />

    <EditText
        android:id="@+id/veri_sin"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/textarka"
        android:text=""
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veri_num" />

    <Button
        android:id="@+id/indir"
        android:layout_width="109dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="317dp"
        android:background="@drawable/btnarkaplan"
        android:text="İNDİR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sin"
        app:layout_constraintVertical_bias="0.181" />

</androidx.constraintlayout.widget.ConstraintLayout>